class   Solution   { 
  public : 
      int   minFlipsMonoIncr ( string s )   { 
          int  n = s . size ( ) ; 
          int  flips = 0 ,  counter = 0 ; 
          for ( int  i = 0 ;  i < n ;  i ++ ) { 
              if ( s [ i ] == '1' ) 
                 counter ++ ; 
              else 
                 flips ++ ; 
             flips = min ( flips ,  counter ) ; 
          } 
          return  flips ; 
      } 
  } ;