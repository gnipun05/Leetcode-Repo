class   Solution   { 
 public : 
      int   longestValidParentheses ( string s )   { 
         stack < int >  st ; 
          int  answer = 0 ; 
         st . push ( - 1 ) ;   // -1 is chosen on purpose... for string starting from () it assists in calculating value of answer 
          for ( int  i = 0 ;  i < s . size ( ) ;  i ++ ) { 
              if ( s [ i ] == '(' ) 
                 st . push ( i ) ; 
              else { 
                 st . pop ( ) ; 
                  if ( st . empty ( ) ) { 
                     st . push ( i ) ; 
                  } 
                  else { 
                     answer = max ( answer ,  i - st . top ( ) ) ; 
                  } 
              } 
          } 
          return  answer ; 
      } 
 } ;