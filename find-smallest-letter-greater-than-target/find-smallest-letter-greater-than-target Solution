class   Solution   { 
 public : 
      char   nextGreatestLetter ( vector < char > &  letters ,   char  target )   { 
         vector < char >   ::  iterator ptr = upper_bound ( letters . begin ( ) ,  letters . end ( ) ,  target ) ; 
          if ( ptr == letters . end ( ) ) 
              return  letters [ 0 ] ; 
          return   * ptr ; 
      } 
 } ;