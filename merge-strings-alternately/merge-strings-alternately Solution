class   Solution   { 
 public : 
     string  mergeAlternately ( string word1 ,  string word2 )   { 
         string answer = "" ; 
          int  i = 0 ,  j = 0 ; 
          while ( i < word1 . size ( )   &&  j < word2 . size ( ) ) { 
             answer = answer + word1 [ i ++ ] + word2 [ j ++ ] ; 
          } 
         answer += word1 . substr ( i ) ; 
         answer += word2 . substr ( j ) ; 
          return  answer ; 
      } 
 } ;