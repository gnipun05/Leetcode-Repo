class   Solution   { 
 public : 
      int   numSquares ( int  n )   { 
         vector < int >   dp ( n + 1 ,  INT_MAX ) ; 
         dp [ 0 ] = 0 ; 
          for ( int  i = 1 ;  i <= sqrt ( n ) ;  i ++ ) { 
              int  k = i * i ; 
              for ( int  j = k ;  j <= n ;  j ++ ) { 
                 dp [ j ] = min ( dp [ j - k ] + 1 ,  dp [ j ] ) ; 
              } 
          } 
          return  dp [ n ] ; 
      } 
 } ;