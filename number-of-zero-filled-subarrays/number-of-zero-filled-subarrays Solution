class   Solution   { 
 public : 
      long   long   zeroFilledSubarray ( vector < int > &  nums )   { 
          long   long  answer = 0 ; 
          long   long  curr = 0 ; 
          for ( int  i = 0 ;  i < nums . size ( ) ;  i ++ ) { 
              if ( nums [ i ] != 0 ) 
                 curr = 0 ; 
              else { 
                 curr ++ ; 
                 answer += curr ; 
              } 
          } 
          return  answer ; 
      } 
 } ;